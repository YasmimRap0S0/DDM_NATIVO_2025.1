<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainLogin"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/roxo"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="49dp"
        android:text="Registre-se"
        android:textColor="#4958AF"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userInput"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_corner"

        android:backgroundTint="#D7D7D7"
        android:hint="Usuário"
        android:padding="10dp"
        android:textColorHint="#4D4D4D"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#D7D7D7"
        android:hint="E-mail"
        android:padding="10dp"
        android:textColorHint="#4D4D4D"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/senhaInput"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#D5D5D5"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="#4D4D4D"
        android:textSize="12sp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:text="Esqueceu sua senha?"
        android:textColor="#8790AF"
        android:textSize="14sp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:background="#5C54A5"
        android:padding="8dp"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Já tem uma conta conta? Faça login"
        android:textColor="#5C54A5"
        android:textSize="14sp" />

</LinearLayout>
